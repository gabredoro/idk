
{
  "name": "controller-midi-bridge",
  "productName": "Controller Midi Bridge",
  "version": "0.0.9",
  "main": "main.js",
  "author": "Gabriele Trucco",
  "description": "Transform Gamepad controller into MIDI",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.tuonome.controllermidibridge",
    "mac": {
      "identity": null,
      "category": "public.app-category.music",
      "target": "dmg",
      "icon": "icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Controller Midi Bridge Installer",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "node-hid": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "electron": "33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  }
}
